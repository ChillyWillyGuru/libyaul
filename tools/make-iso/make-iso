genisoimage \
    -sysid "SEGA SEGASATURN" \
    -volid "" \
    -volset "" \
    -publisher "SEGA ENTERPRISES, LTD." \
    -preparer "SEGA ENTERPRISES, LTD." \
    -appid "" \
    -abstract "ABS.TXT" \
    -copyright "CPY.TXT" \
    -biblio "BIB.TXT" \
    -generic-boot 'ip.bin' \
    -full-iso9660-filenames \
    -o "${1}.iso" cd
